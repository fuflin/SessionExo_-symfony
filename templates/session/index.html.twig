{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}

    <h1 style="text-align: center;">Listes des sessions</h1><br><br>

    <h4 style="text-align: center;"><a href="{{ path('add_session')}}" class="btn btn-primary" style="width: 15%">Ajouter une session</a></h4><br><br>

    {% for session in sessions %}
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-sm-6" style=" width: 30%;">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title" style="text-align: center;"><a href="{{ path('show_session', {'id': session.id})}}" style="text-align: center;">{{session}}</a></h5>
              <div class="button" style="text-align: center;">
                <a href="{{ path('edit_session', {'id': session.id})}}" class="btn btn-info">Edit</a>
                <a href="{{ path('delete_session', {'id': session.id})}}" class="btn btn-danger">Delete</a>
              </div>
            </div>
          </div>
        </div>
      </div><br>
    {% endfor %}

{% endblock %}
