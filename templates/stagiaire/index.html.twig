{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Listes des stagiaires</h1>

    <a href="{{ path('add_stagiaire')}}">Ajouter un stagiaire</a><br><br><br>

    {% for stagiaire in stagiaires %}

        <a href="{{ path('show_stagiaire', {'id': stagiaire.id})}}">{{stagiaire}}</a>
        <a href="{{ path('edit_stagiaire', {'id': stagiaire.id})}}" class="btn btn-info">Edit</a>
        <a href="{{ path('delete_stagiaire', {'id': stagiaire.id})}}" class="btn btn-danger">Delete</a> <br><br>

    {% endfor %}

{% endblock %}
